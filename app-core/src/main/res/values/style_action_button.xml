<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Xsolla.ActionButton" parent="">
        <item name="android:textColor">@color/action_button_text_color</item>
        <item name="android:height">@dimen/action_button_height</item>
        <item name="android:layout_marginTop">@dimen/action_button_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/action_button_bottom_margin</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@color/action_button_color</item>
        <item name="android:textSize">@dimen/action_button_text_size</item>
    </style>
    
    <style name="Widget.Xsolla.ActionButton.Small" parent="Widget.Xsolla.ActionButton">
        <item name="android:height">@dimen/small_action_button_height</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="Widget.Xsolla.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="Widget.Xsolla.ActionButton.Small.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:height">@dimen/secondary_action_button_height</item>
        <item name="strokeColor">@color/action_button_small_color</item>
        <item name="strokeWidth">@dimen/secondary_action_button_stroke_width</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/action_button_small_color</item>
        <item name="android:textSize">@dimen/secondary_action_button_text_size</item>
        <item name="rippleColor">@color/white_color_20</item>
    </style>

    <style name="Widget.Xsolla.ActionButton.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/magenta_color</item>
    </style>

    <style name="Widget.Xsolla.ConsumeButton" parent="">
        <item name="android:height">@dimen/inventory_fragment_consume_button_height</item>
        <item name="android:width">@dimen/inventory_fragment_consume_button_width</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@color/action_button_color</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">@dimen/inventory_fragment_consume_button_text_size</item>
        <item name="android:text">Consume</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>